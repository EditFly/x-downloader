            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>lingfeng-biz</groupId>
            <artifactId>downloader-ffmpeg</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>


</project>